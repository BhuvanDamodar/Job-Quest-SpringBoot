server:
  port: 8084

spring:
  application:
    name: API-GATEWAY
    
  cloud:
    gateway:
      routes:
      - id: RECRUITER-FORM 
        uri:
          lb://RECRUITER-FORM
        predicates:
        - Path=/**  
        
      - id: JWT
        uri:
          lb://JWT
        predicates:
        - Path=/** 
        
       
        
      default-filters:
        - DedupeResponseHeader=Access-Control-Allow-Origin Access-Control-Allow-Credentials, RETAIN_UNIQUE
      globalcors:
          cors-configurations: 
            '[/**]':
              allowed-origins: "*"
              allowed-methods: "*"
              allowed-headers: "*"