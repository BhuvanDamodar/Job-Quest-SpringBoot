server:
  port: 8888

spring:
  application:
    name: Api-Gateway
    
  cloud:
    gateway:
      routes:
      - id: recruiter-form
        uri:
          lb://recruiter-form
        predicates:
        - Path=/**
        
      - id: jwt
        uri:
          lb://jwt
        predicates:
        - Path=/**
        
       
        
      default-filters:
        - DedupeResponseHeader=Access-Control-Allow-Origin Access-Control-Allow-Credentials, RETAIN_UNIQUE
      globalcors:
          cors-configurations: 
            '[/**]':
              allowed-origins: "*"
              allowed-methods: "*"
              allowed-headers: "*"