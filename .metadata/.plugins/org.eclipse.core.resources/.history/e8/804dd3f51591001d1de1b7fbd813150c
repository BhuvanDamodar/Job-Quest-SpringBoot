server:
  port: 8888

spring:
  application:
    name: Api-Gateway
    
  cloud:
    gateway:
      routes:
      - id: RECRUITER-FORM
        uri:
          lb://RECRUITER-FORM
        predicates:
        - Path=/**
        
      - id: JWT-USER
        uri:
          lb://JWT-USER
        predicates:
        - Path=/**
      default-filters:
        - DedupeResponseHeader=Access-Control-Allow-Origin Access-Control-Allow-Credentials, RETAIN_UNIQUE
      globalcors:
          cors-configurations: 
            '[/**]':
              allowed-origins: "*"
              allowed-methods: "*"
              allowed-headers: "*"